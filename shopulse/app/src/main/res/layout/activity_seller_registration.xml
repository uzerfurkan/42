<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sellers.SellerRegistrationActivity">

    <ImageView
        android:id="@+id/img_satici"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/title_satici"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Satıcı Üye Kayıt Formu"
        android:gravity="center"
        android:layout_below="@id/img_satici"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:id="@+id/satici_isim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/title_satici"
        android:hint="İsim"
        android:inputType="text"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/satici_telefon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/satici_isim"
        android:hint="Telefon Numarası"
        android:inputType="number"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        />



    <EditText
        android:id="@+id/satici_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/satici_telefon"
        android:hint="E-mail Adresi"
        android:inputType="textEmailAddress"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/satici_sifre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/satici_email"
        android:hint="Şifre"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/satici_adres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/satici_sifre"
        android:hint="Alışveriş - İş Adresi"
        android:inputType="textEmailAddress"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/satici_kayit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/satici_adres"
        android:background="@android:color/white"
        android:text="Kaydet"
        android:textAllCaps="false"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/satici_zaten_hesap_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_green_dark"
        android:text="Zaten bir hesabım var"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        />


</RelativeLayout>